{
  "name": "paraglide",
  "version": "0.3.0-beta",
  "private": true,
  "main": "./src/main.js",
  "author": "WareAoba",
  "description": "Paragraph Clipboader",
  "build": {
    "appId": "com.paraglide.app",
    "productName": "Paraglide",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "src/**/*",
      "node_modules/**/*",
      "!**/node_modules/.cache/**/*",
      "!**/*.map"
    ],
    "mac": {
      "icon": "public/icons/mac/icon.icns",
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Paraglide",
      "icon": "public/icons/mac/icon.icns",
      "background": "public/dmg/background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "homepage": "./",
  "dependencies": {
    "@reduxjs/toolkit": "^2.3.0",
    "d2coding": "^1.3.2",
    "electron-clipboard-watcher": "^1.0.1",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^5.2.4",
    "hangul-js": "^0.2.6",
    "hex-to-css-filter": "^5.4.0",
    "iconv-lite": "^0.6.3",
    "jschardet": "^3.1.4",
    "node-global-key-listener": "^0.3.0",
    "react": "^18.2.0",
    "react-colorful": "^5.6.1",
    "react-contexify": "^6.0.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.28.0",
    "react-transition-group": "^4.4.5",
    "simplebar-react": "^3.2.6"
  },
  "scripts": {
    "start": "vite",
    "build": "rimraf dist && vite build",
    "preview": "vite preview",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "clean": "rimraf dist",
    "sign-win": "powershell -File ./certificates/sign-windows.ps1",
    "prebuild": "npm run clean",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make && npm run sign-win",
    "make-dmg": "electron-forge make --platform darwin --target dmg"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-dmg": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
    "@electron-forge/plugin-fuses": "^7.5.0",
    "@electron/fuses": "^1.8.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^26.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "rimraf": "^6.0.1",
    "vite": "^6.0.5",
    "wait-on": "^7.2.0"
  }
}
